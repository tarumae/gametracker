<div class="container">
  <h1><%= @tracker.name %></h1>
  <%= link_to "Edit this tracker", edit_tracker_path(@tracker)  %>
  <%= link_to "Delete this tracker", tracker_path(@tracker), method: :delete  %>
  <%= link_to "Add game", new_tracker_added_game_path(@tracker)  %>

  <h4>List of games in this tracker</h4>

  <ul class="nav nav-tabs" id="gamesTab" role="tablist">
  <% @tracker.games.each do |game| %>
    <li class="nav-item" role="presentation">
      <a class="nav-link" id="g<%= game.id %>-tab" data-toggle="tab" href="#g<%= game.id %>" role="tab" aria-controls="g<%= game.id %>" aria-selected="false"><%= game.title %></a>
    </li>
  <% end %>
  </ul>
  <div class="tab-content" id="gamesTabContent">
  <% @tracker.games.each do |game| %>
    <div class="tab-pane fade" id="g<%= game.id %>" role="tabpanel" aria-labelledby="g<%= game.id %>-tab"><%= game.url %></div>
  <% end %>
  </div>
</div>